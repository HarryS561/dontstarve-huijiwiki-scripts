"use strict";class TabbableLink extends HTMLAnchorElement{connectedCallback(){this.addEventListener("click",this.onClick),this.classList.contains("selected")&&requestAnimationFrame(()=>{this.scrollTabLinkIntoView()})}onClick(e){if(e.preventDefault(),this.classList.contains("selected"))return;const n=document.getElementById(this.getAttribute("aria-controls"));if(window.requestAnimationFrame(()=>{this.activate(this),this.activate(n),this.dispatchEvent(new Event("tab-shown"));const t=this.closest(".tabbable").querySelector(".tab-content");requestAnimationFrame(()=>{if(t&&e.isTrusted)if(location.pathname==="/search/")window.scrollTo({top:0,behavior:"smooth"});else{const i=Number.parseInt(getComputedStyle(document.documentElement).scrollPaddingTop,10)||0;window.scrollTo({top:window.scrollY+t.getBoundingClientRect().top-i+16,behavior:"smooth"})}this.scrollTabLinkIntoView(!0)})}),location.pathname==="/search/")return;history.replaceState(null,null,this.href);const s=document.querySelector('link[rel="canonical"]');if(s){const t=new URL(this.href,location.origin);s.href=t.toString()}const o=document.querySelector('h1[itemprop="name"]');if(o){let t="";o&&(t=o.textContent,t+=" ");for(const a of this.childNodes)if(a.nodeType===Node.TEXT_NODE){t+=a.textContent.trim();break}t+=" \xB7 SteamDB";const i=document.querySelector("head > title");i.textContent=t}}activate(e){const n=e.parentNode.querySelector(".selected");n&&n.classList.remove("selected"),e.classList.add("selected")}scrollTabLinkIntoView(e=!1){if(window.matchMedia("(max-width: 979px)").matches){const n=this.closest(".tabnav");n.scrollTo({left:this.offsetLeft-n.offsetWidth/2+this.offsetWidth/2,behavior:e?"smooth":"instant"})}}}customElements.define("tabbable-link",TabbableLink,{extends:"a"});
